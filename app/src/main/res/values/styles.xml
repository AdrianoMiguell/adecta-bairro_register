<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="optionsNavigationMenu">
        <item name="android:textColor">#FFFFFF</item> <!-- Cor do texto -->
        <item name="android:textStyle">bold</item> <!-- Estilo do texto -->
<!--        <item name="android:iconTint">#FFA500</item> &lt;!&ndash; Cor do ícone &ndash;&gt;-->
    </style>

    <style name="transparentButtonTextDark" parent="Widget.AppCompat.Button">
<!--        <item name="android:background">@android:color/transparent</item>-->
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:textColor">@color/quin_ming</item> <!-- Altere para a cor desejada -->
        <item name="android:padding">8dp</item> <!-- Opcional: ajuste conforme necessário -->
    </style>

    <style name="layoutClickedBackgroundGreen" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rippler_effect_green_light</item>
    </style>

    <style name="layoutBackgroundGreenActive" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/green_light_2</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="rounded_background_green_light">
        <item name="background">@drawable/rounded_background_green_light</item>"
    </style>

    <style name="NavigationView.ActiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="color">@color/main_green_haze</item>
    </style>

    <style name="NavigationView.InactiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10.5sp</item>
        <item name="color">@color/light_gray</item>
    </style>

    <!-- Tema personalizado para o NavigationView -->
    <style name="NavigationDrawerStyle">
<!--        <item name="buttonIconTint">@color/green_light_2</item>-->
        <item name="colorControlHighlight">@color/green_light_2</item>
        <item name="android:colorAccent">@color/green_light_2</item>
        <item name="android:colorControlNormal">@color/green_light_2</item>

        <!-- Remover animações de transição -->
        <item name="android:textAppearance">@style/TextAppearance.NoTransition</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.NoTransition</item>
    </style>

    <style name="TextAppearance.NoTransition" parent="@android:style/TextAppearance">
        <item name="android:alpha">1.0</item>
    </style>
</resources>